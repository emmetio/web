{
  "compilerOptions": {
    "target": "ES6",
    "allowJs": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "alwaysStrict": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "declaration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "newLine": "LF",
    "outDir": "./dist"
  },
  "include": [
    "src/**/*.ts"
  ]
}
