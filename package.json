{
  "name": "@emmetio/web",
  "version": "0.0.1",
  "description": "A web-site for Emmet 2.0",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:html && npm run build:css && npm run build:app",
    "build:app": "rollup -c",
    "build:html": "cpx ./src/index.html ./out/",
    "build:css": "postcss ./src/style/*.css -m -d ./out/style",
    "watch": "npm run build:html -- -w & npm run build:css -- -w & npm run build:app -- -w",
    "test": "mocha"
  },
  "keywords": [],
  "author": "Sergey Chikuyonok <serge.che@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@endorphinjs/rollup-plugin-endorphin": "^0.2.3",
    "@types/codemirror": "0.0.74",
    "cpx": "^1.5.0",
    "endorphin": "^0.4.3",
    "mocha": "^6.1.4",
    "node-sass": "^4.12.0",
    "reify": "^0.19.1",
    "rollup": "^1.13.1",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.0.1",
    "rollup-plugin-typescript2": "^0.21.1",
    "ts-node": "^8.2.0",
    "tslint": "^5.17.0",
    "typescript": "^3.5.1"
  },
  "dependencies": {
    "@emmetio/codemirror-plugin": "^0.5.4",
    "@emmetio/config": "0.4.0",
    "@emmetio/expand-abbreviation": "^0.7.3",
    "@emmetio/snippets": "^0.2.12",
    "codemirror": "^5.47.0"
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/emmetio/web.git"
  },
  "bugs": {
    "url": "https://github.com/emmetio/web/issues"
  },
  "homepage": "https://github.com/emmetio/web#readme"
}
